aside {
    nav {
	ul {
	    list-style-type: none;
	    margin: 0;
	    padding: 0;
	}
	li {
	    float: left;
            a {
		background: $main-background;
		border: 1px solid transparent;
		color: $main-color;
		display: block;
		padding: 16px 2px;
		text-align: center;
		text-decoration: none;
		&:hover {
		    background: $header-background;
		    border: 1px solid white;
		    color: $header-color;
		}
		&.stuck {
		    background: $header-background;
		    border: 1px solid black;
		    color: $header-color;
		}
	    }	    
	}
    }
    &:after {
	clear: both;
	content: '';
	display: table;
    }
}
header {
    background: $header-background;
    color: $header-color;
    padding: 16px 2px;
}
main {
    max-width: $main-max-width;
}
